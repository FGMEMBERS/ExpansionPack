<PropertyList>

    <path>fuel-line.ac</path>

    <animation>
        <type>select</type>
        <object-name>fuel_line</object-name>
        <condition>
            <property>/sim/model/fuel-truck/connected</property>
        </condition>
    </animation>

    <animation>
        <type>rotate</type>
        <property>/sim/model/fuel-truck/line-pitch-deg</property>
        <factor>-1</factor>
        <axis>
            <x>0</x>
            <y>1</y>
            <z>0</z>
        </axis>
    </animation>

    <animation>
        <type>rotate</type>
        <property>/sim/model/fuel-truck/line-heading-deg</property>
        <factor>-1</factor>
        <axis>
            <x>0</x>
            <y>0</y>
            <z>1</z>
        </axis>
    </animation>

    <!-- Unscaled model has 4 cm length -->
    <animation>
        <type>scale</type>
        <object-name>fuel_line</object-name>
        <property>/sim/model/fuel-truck/line-length</property>
        <x-min>0.0</x-min>
        <y-min>1.0</y-min>
        <z-min>1.0</z-min>
        <x-factor>1.0</x-factor>
        <y-factor>0.0</y-factor>
        <z-factor>0.0</z-factor>
    </animation>

    <!-- Unscaled model has 4 cm diameter -->
    <animation>
        <type>scale</type>
        <object-name>fuel_line</object-name>
        <property>/sim/model/fuel-truck/line-diameter</property>
        <x-min>1.0</x-min>
        <y-min>0.0</y-min>
        <z-min>0.0</z-min>
        <x-factor>0.0</x-factor>
        <y-factor>0.025</y-factor>
        <z-factor>0.025</z-factor>
    </animation>

    <animation>
        <type>rotate</type>
        <property>/orientation/pitch-deg</property>
        <factor>-1</factor>
        <axis>
            <x>0</x>
            <y>1</y>
            <z>0</z>
        </axis>
    </animation>

    <animation>
        <type>rotate</type>
        <property>/orientation/roll-deg</property>
        <factor>1</factor>
        <axis>
            <x>1</x>
            <y>0</y>
            <z>0</z>
        </axis>
    </animation>

    <animation>
        <type>translate</type>
        <property>/sim/model/fuel-truck/px</property>
        <factor>1.0</factor>
        <axis>
            <x>1</x>
            <y>0</y>
            <z>0</z>
        </axis>
    </animation>

    <animation>
        <type>translate</type>
        <property>/sim/model/fuel-truck/py</property>
        <factor>1.0</factor>
        <axis>
            <x>0</x>
            <y>1</y>
            <z>0</z>
        </axis>
    </animation>

    <animation>
        <type>translate</type>
        <property>/sim/model/fuel-truck/pz</property>
        <factor>1.0</factor>
        <axis>
            <x>0</x>
            <y>0</y>
            <z>1</z>
        </axis>
    </animation>

</PropertyList>
